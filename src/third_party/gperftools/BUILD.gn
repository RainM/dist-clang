config("flags") {
  cflags = [
    "-fno-builtin-calloc",
    "-fno-builtin-cfree",
    "-fno-builtin-free",
    "-fno-builtin-malloc",
    "-fno-builtin-memalign",
    "-fno-builtin-realloc",
    "-fno-builtin-posix_memalign",
    "-fno-builtin-pvalloc",
    "-fno-builtin-valloc",
  ]

  defines = [
    "HAVE_CONFIG_H",
    "NO_FRAME_POINTER",
  ]

  if (os == "linux") {
    include_dirs = [ "linux" ]
  }

  ldflags = [
    "-fno-builtin-calloc",
    "-fno-builtin-cfree",
    "-fno-builtin-free",
    "-fno-builtin-malloc",
    "-fno-builtin-memalign",
    "-fno-builtin-realloc",
    "-fno-builtin-posix_memalign",
    "-fno-builtin-pvalloc",
    "-fno-builtin-valloc",
  ]
}

config("no_warnings") {
  cflags = [
    "-Wno-sign-compare",
    "-Wno-unused-const-variable",
    "-Wno-unused-function",
    "-Wno-unused-variable",
  ]
}

source_set("spinlock") {
  sources = [
    "exported/src/base/atomicops-internals-x86.cc",
    "exported/src/base/spinlock.cc",
    "exported/src/base/spinlock_internal.cc",
  ]

  include_dirs = [ "exported/src" ]

  configs += [
    ":flags",
    ":no_warnings",
  ]

  deps -= [ "//src/third_party/gperftools:tcmalloc" ]
}

source_set("sysinfo") {
  sources = [
    "exported/src/base/sysinfo.cc",
  ]

  include_dirs = [ "exported/src" ]

  configs += [
