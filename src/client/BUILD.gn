executable("clang") {
  sources = [ "clang_main.cc" ]
  deps += [
    ":client",
    "//src/base:constants",
    "//src/base:logging",
  ]
}

source_set("client") {
  sources = [
    "clang.cc",
    "clang.h",
    "command.cc",
    "command.h",
  ]
  configs += [
    "//build/config:libclang",
  ]
  deps += [
    "//src/base:base",
    "//src/base:logging",
    "//src/net:net",
    "//src/proto:proto",
  ]

  direct_dependent_configs = [ "//build/config:libclang_includes" ]
}
