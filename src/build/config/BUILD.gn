config("base") {
  cflags = [
    "-fno-rtti",
    "-fPIC",
    "-nostdinc++",
    "-pipe",
    "-pthread",
    "-std=c++11",
    "-Wall",
    "-Wsign-compare",
    "-Werror",
  ]
  include_dirs = [ "//" ]
  ldflags = [
    "-nodefaultlibs",
    "-fno-rtti",
  ]
  libs = [ "pthread" ]
}

config("default_library") {
  cflags = [
    "-std=c++11",
    "-nostdinc++",
    "-fPIC",
  ]
  include_dirs = [ "//third_party/libcxx/include" ]
  ldflags = [ "-nodefaultlibs" ]
  libs = [ "c" ]
}

config("debug") {
  cflags = [
    "-g",
    "-O0",
  ]
  defines = [
    "_LIBCPP_DEBUG=1",
  ]
}

config("release") {
  cflags = [
    "-fomit-frame-pointer",
    "-O3",
  ]
  defines = [
    "NDEBUG",
  ]
  ldflags = [
    # TODO: check that rpath is correct.
    "-rpath", "/usr/\$LIB/dist-clang",
  ]
}

config("no_exceptions") {
  cflags = [
    "-fno-exceptions",
  ]
  ldflags = [
    "-fno-exceptions",
  ]
}

config("profiler") {
  defines = [ "PROFILER" ]
  libs = [ "profiler" ]
}

config("tcmalloc") {
  libs = [ "tcmalloc" ]
}
